<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:adsmogo="http://www.adsmogo.com"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk_start"
    tools:context=".CGamePage" >

    <jk.haibian.qlianglink.CGameView
        android:id="@+id/cGameView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtBeanNum" />
    
    <com.adsmogo.adview.AdsMogoLayout
        android:id="@+id/adsMogoView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        adsmogo:appid="1ec52e5a4d394a17a4ca19332a2caf74" >
    </com.adsmogo.adview.AdsMogoLayout>

    <TextView
        android:id="@+id/txtBeanNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtBean"
        android:layout_alignBottom="@+id/txtBean"
        android:layout_toRightOf="@+id/txtBean"
        android:minWidth="40dp"
        android:text="100"
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="@color/clrYellow" />

    <TextView
        android:id="@+id/txtBean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="金豆："
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="@color/textOrange" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtBean"
        android:layout_alignBottom="@+id/txtBean"
        android:layout_toRightOf="@+id/txtBeanNum"
        android:text="时间："
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="@color/textOrange" />
    
    <ProgressBar
        android:id="@+id/progressBar1"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/textView1" />

    <Button
        android:id="@+id/button2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="56dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:text="+25&quot;" />

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="56dp"
        android:layout_height="36dp"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:text="暂停" />

    <Button
        android:id="@+id/button3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="56dp"
        android:layout_height="36dp"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_toLeftOf="@+id/button2"
        android:text="+10&quot;" />

</RelativeLayout>